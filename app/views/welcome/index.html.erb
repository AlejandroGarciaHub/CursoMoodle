					<%end%>
                </div>
                <div class="col-sm-4 portfolio-item block-color-fondo">
                	<%= link_to page_path('moodle.html'), :class=>"portfolio-link"  do %>
                        <div class="caption">
                            <div class="caption-content">
                                <i class="fa fa-search-plus fa-3x"><p><h3>Conoce Moodle</h3></p></i>
                            </div>
                        </div>
                        <img src="img/resources/2.jpg" class="img-responsive top-image" alt=""><p><h3 class="center">Conoce Mooddle</h3></p>
					<%end%>
                </div>
                <div class="col-sm-4 portfolio-item block-color-fondo">
                    <%= link_to page_path('porque.html'), :class=>"portfolio-link"  do %>
