<div class="row center-xs" style="margin-top:90px;">
  <div class="col-xs-8 com-md-6">
    <div class="box">
<h2>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Correo electronico" %><br />
    <%= f.email_field :email, autofocus: true, class:"log-form-controll" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviame instrucciones para restablecer la contraseña", class:"btn green white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<%= render "partials/footer_above" %>